root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Markdown - do not trim trailing spaces (needed for line breaks)
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# PHP files
[*.php]
indent_style = space
indent_size = 4

# YAML / YML files
[*.{yml,yaml}]
indent_style = space
indent_size = 4

# XML files
[*.xml]
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 4

# NEON files (used in Nette, PHPStan etc.)
[*.neon]
indent_style = space
indent_size = 4

# JavaScript files
[*.js]
indent_style = space
indent_size = 4

# CSS files
[*.css]
indent_style = space
indent_size = 4

# HTML files
[*.html]
indent_style = space
indent_size = 4

# Twig templates
[*.twig]
indent_style = space
indent_size = 4

# Laravel Blade templates
[*.blade.php]
indent_style = space
indent_size = 4
